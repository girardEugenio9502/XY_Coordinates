<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.girard.eugeniog.Log_In"
    android:background="@color/bright_foreground_disabled_material_light">


    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPassword"
        android:ems="10"
        android:id="@+id/Pword"
        android:layout_centerVertical="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_marginRight="46dp"
        android:layout_marginEnd="46dp" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/Uname"
        android:layout_above="@+id/Pword"
        android:layout_alignLeft="@+id/Pword"
        android:layout_alignStart="@+id/Pword"
        android:layout_alignRight="@+id/Pword"
        android:layout_alignEnd="@+id/Pword" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Username"
        android:id="@+id/textView"
        android:layout_alignBottom="@+id/Uname"
        android:layout_toLeftOf="@+id/Uname"
        android:layout_toStartOf="@+id/Uname" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Password "
        android:id="@+id/textView2"
        android:layout_alignBottom="@+id/Pword"
        android:layout_toLeftOf="@+id/Pword"
        android:layout_toStartOf="@+id/Pword" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Log In "
        android:id="@+id/bLogIn"
        android:layout_below="@+id/Pword"
        android:layout_alignLeft="@+id/textView"
        android:layout_alignStart="@+id/textView"
        android:layout_marginTop="42dp" />

</RelativeLayout>
